<% provide :title, t("views.pages.users") %>

<div class="row">
  <aside class="col-md-8">
    <h1><%= t "views.pages.users" %></h1>
    <table class="table table-bordered table-hover">
      <tr>
        <th><%= t "users.id" %></th>
        <th><%= t "users.name" %></th>
        <th><%= t "users.email" %></th>
        <th><%= t "users.created" %></th>
        <th><%= t "users.updated" %></th>
      </tr>
      <% @users.each do |user| %>
        <tr data-link="<%= admin_users_path(user) %>">
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.created_at.strftime(Settings.created_at) %></td>
          <td><%= user.updated_at.strftime(Settings.update_at) %></td>
        </tr>
      <% end %>
    </table>
    <%= will_paginate %>
  </aside>
  <aside class="col-md-4">
    <br>
    <%= link_to t("messeager.create_new_user"), new_admin_user_path, class: "btn btn-primary" %>
  </aside>
</div>
