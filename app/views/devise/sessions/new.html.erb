<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h1 class="text-info text-center"><%= t "views.pages.login" %></h1>
    <hr>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class: "text-info" %><br>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label :password, class: "text-info" %><br>
        <%= f.password_field :password, class: "form-control" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.label :remember_me, class: "text-danger" %>
          <%= f.check_box :remember_me %>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit t("views.actions.done"), class: "btn btn-success btn-block" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
