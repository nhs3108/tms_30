<div class="row">
  <h2>
    <%= link_to @course.name, @course %>
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="text18px"><%= @course_subject.subject.name %></span>
  </h2>
  <hr>
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @course_subject, url: [:supervisor, @course, @course_subject.subject] do |f| %>
      <%= render "shared/error_messages", object: @course %>
      <div class="col-md-4 col-md-offset-4">
        <%= f.select :closed, options_for_select(
          [[t("courses.status.close"), true], [t("courses.status.open"), false]],
          selected_key = f.object.closed), {}, class: "form-control" %>
      </div>
      <div class="actions">
        <%= f.submit t("views.actions.done"), class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
