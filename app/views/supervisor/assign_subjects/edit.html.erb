<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @course, url: supervisor_course_assign_subjects_path do |f| %>
      <h2><%= t "views.messages.update_course_subjects" %></h2>
      <%= hidden_field_tag "course[subject_ids][]" %>
      <table class="table">
        <% @subjects.each do |subject| %>
          <tr>
            <td class="text-info"><b><%= subject.name %></b></td>
            <td>
              <%= f.check_box :subject_ids, {name: "course[subject_ids][]",
                checked: @course.subjects.include?(subject)}, subject.id, nil %>
            </td>
          </tr>
        <% end %>
      </table>
      <div class="actions">
        <%= f.submit t("views.actions.done"), class: "btn btn-success btn-block" %>
      </div>
    <% end %>
  </div>
</div>
