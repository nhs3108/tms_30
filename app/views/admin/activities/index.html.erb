<% provide :title, t("views.pages.admin_activities") %>

<h1><%= t "views.pages.admin_activities" %></h1>
<% @activities.each do |activity| %>
  <br>
  <%= activity.type_action %>
  <%= activity.content %>
  <%= t "views.messages.have_id" %>
  <%= activity.target_id %>
  <%= link_to t("views.actions.delete"), [:admin, activity], method: :delete,
    data: {confirm: t("views.messages.del_confirm_msg")} %>
<% end %>
<%= will_paginate %>
