<div class="col-md-6 col-md-offset-3">
  <%= form_for [:supervisor, @course] do |f| %>
    <%= render "shared/error_messages", object: @course %>
    <div class="field">
      <%= f.label :name, class: "text-info" %><br>
      <%= f.text_field :name, autofocus: true, class: "form-control",
        placeholder: t("courses.name_placeholder") %>
    </div>
    <div class="field">
      <%= f.label :description, class: "text-info" %>
      <%= f.text_area :description, class: "form-control",
        placeholder: t("courses.description_placeholder") %>
    </div>
    <div class="col-md-4 col-md-offset-4">
      <%= f.select :closed, options_for_select(
        [[t("courses.status.close"), true], [t("courses.status.open"), false]],
        selected_key = f.object.closed), {}, class: "form-control" %>
    </div>
    <div class="actions">
      <%= f.submit t("views.actions.done"), class: "btn btn-success btn-block" %>
    </div>
  <% end %>
</div>
